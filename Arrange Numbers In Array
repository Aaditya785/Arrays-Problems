
public class Solution {
    
    public static void arrange(int[] arr, int n) {
    	//Your code goes here
        int s = 0, e = n-1, i = 1;
        while(e>=s && i<=n)
        {
            
            if(i%2!=0){
              arr[s]=i;
              i++;
              s++;
           }
            else{
               arr[e]=i;
                i++;
                e--;
            }
        }
    }
}
